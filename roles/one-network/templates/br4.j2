#jinja2: trim_blocks:False
# Generated by ansible in {{ date_time }}

auto br4
iface br4 inet static
    address {{ br4_ip }}
    netmask {{ br4_netmask }}
    gateway {{ br4_gateway }}
    dns-nameservers {{ br4_dns_1 }} {{ br4_dns_2 }}
    bridge_ports bond4
    bridge_stp off
    bridge_fd 0
    bridge_maxwait 0
    post-up ip rule add from {{ br4_ip }} lookup table-br4
    post-up ip route add default via {{ br4_gateway }} table table-br4
    post-down ip rule del from {{ br4_ip }} lookup table-br4
    post-down ip route del default via {{ br4_gateway }} table table-br4
