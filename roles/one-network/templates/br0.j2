# Generated by ansible in {{ date_time }}

auto br0
iface br0 inet static
    address {{ br0_ip }}
    netmask {{ br0_netmask }}
    bridge_ports bond0
    bridge_stp off
    bridge_fd 0
    bridge_maxwait 0
    post-up ip rule add from {{ br0_ip }} lookup table-br0
    post-up ip route add default via {{ br0_gateway }} table table-br0
    post-down ip rule del from {{ br0_ip }} lookup table-br0
    post-down ip route del default via {{ br0_gateway }} table table-br0
